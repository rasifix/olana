<div class="col-12">
 <ul class="ranking-list">
 {{#each runners as |runner|}}
  <li>
		<div class="row">
  		<div class="hidden-xs-down" style="float:left; padding:0px 4px; width:25px; color:gray; font-size:0.8em" {{action 'runnerClicked' runner}}>
      	{{#if runner.showSplits}}&#9660;{{else}}&#9654;{{/if}}
    	</div>
  		<div class="hidden-xs-down col-fixed-50">
			{{input type="checkbox" checked=runner.checked disabled=runner.invalid}}
    	</div>
  		<div class="col-fixed-50 align-right">{{#if runner.rank}}{{runner.rank}}.{{else}}&nbsp;{{/if}}</div>
  		<div class="col-6 col-sm-3 nowrap">{{#link-to runnerRoute runner.id}}{{runner.fullName}}{{/link-to}}</div>
  		<div class="hidden-sm-down col-md-1 nowrap">{{runner.yearOfBirth}}</div>  
  		<div class="col-sm-2 hidden-xs-down nowrap">{{runner.city}}</div>
  		<div class="hidden-sm-down col-md-2 nowrap">{{runner.club}}</div>
  		<div class="col-3 col-sm-2 col-md-1 align-right float-right"><small>{{runner.time}}</small></div>
  		<div class="hidden-xs-down col-sm-1">{{#link-to 'event.categories.category' event.categories.runner.category}}{{runner.category}}{{/link-to}}</div>
		</div>
  </li>

  {{#if runner.showSplits}}
	 {{#each runner.splits as |split|}}
	  <li>
			<div class="row">
	    	<div class="hidden-xs-down col-sm-1 align-right">{{split.number}}</div>
	    	<div class="col-3  col-sm-1 align-right">{{#link-to 'event.legs.leg' split.leg}}{{split.code}}{{/link-to}}</div>
	    	<div class="col-3  col-sm-1 align-right" title="Laufzeit">{{split.time}}</div>
	    	<div class="col-3  col-sm-1 align-right" title="R&uuml;ckstand auf F&uuml;hrenden">+{{split.overallBehind}}</div>
	    	<div class="col-3  col-sm-1 align-right" title="Rang">{{#if split.overallRank}}({{split.overallRank}}.){{/if}}</div>
	    	<div class="col-3  col-offset-3 col-sm-offset-0 col-sm-1 align-right" title="Abschnitts Zeit">{{split.split}}</div>
	    	<div class="col-3 col-sm-1 align-right" title={{split.timeLoss}}>+{{split.splitBehind}}</div>
	    	<div class="col-3 col-sm-1 align-right" title="Abschnitts Rang">{{#if split.splitRank}}({{split.splitRank}}.){{/if}}</div>
  	  	<div class="hidden-xs-down col-sm-1 align-right" title="Performance Index">{{#if split.perfidx}}{{split.perfidx}}%{{/if}}</div>
			</div>
		</li>
	 {{/each}}
  {{/if}}

 {{/each}}
 </ul>
</div>
