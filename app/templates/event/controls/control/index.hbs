<h3>Posten {{model.code}}</h3>

<div class="row">
  <div class="col-12">
<h4>Kategorien</h4>
<ul class="event-list">
{{#each model.categories as |category|}}
  <li>{{#link-to 'event.categories.category' category.name}}{{category.name}}{{/link-to}} <span class="badge badge-pill badge-orange float-right">{{category.runners}}</span></li>
{{/each}}
</ul>
  </div>
</div>

<div class="row">
  <div class="col-12">
<h4>Eingehende Strecken</h4>
<ul class="event-list">
{{#each model.from as |from|}}
  <li>
   {{#link-to 'event.controls.control' from.code}}{{from.code}}{{/link-to}}
   <div class="error-frequency-wrapper" style="left:60px"><div style={{from.style}}>&nbsp;</div><span class="text-muted"><small>{{from.errorFrequency}}%</small></span></div>
   <div class="float-right">
    <span class="text-muted nowrap hidden-xs"><small>{{from.categories}}</small></span>
    <span class="badge badge-pill badge-orange">{{from.runners}}</span>
   </div>
  </li>
{{/each}}
</ul>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <h4>Ausgehende Strecken</h4>
    <ul class="event-list">
    {{#each model.to as |to|}}
      <li>
        {{#link-to 'event.controls.control' to.code}}{{to.code}}{{/link-to}}
        <div class="error-frequency-wrapper" style="left:60px"><div style={{to.style}}>&nbsp;</div><span class="text-muted"><small>{{to.errorFrequency}}%</small></span></div>
        <div class="float-right">
          <span class="text-muted nowrap hidden-xs-down"><small>{{to.categories}}</small></span>
          <span class="badge badge-pill badge-orange">{{to.runners}}</span>
        </div>
      </li>
      {{/each}}
    </ul>
  </div>
</div>